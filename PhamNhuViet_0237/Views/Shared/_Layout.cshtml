<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="pragma" content="no-cache" />
    <meta http-equiv="cache-control" content="max-age=604800" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>GAMER STORE</title>

    <link href="~/Content/images/favicon.ico" rel="shortcut icon" type="image/x-icon">

    <!-- jQuery -->
    <script src="~/Content/js/jquery-2.0.0.min.js" type="text/javascript"></script>

    <!-- Bootstrap4 files-->
    <script src="~/Content/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" type="text/css" />

    <!-- Font awesome 5 -->
    <link href="~/Content/fonts/fontawesome/css/all.min.css" type="text/css" rel="stylesheet">

    <!-- custom style -->
    <link href="~/Content/css/ui.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" type="text/css" />

    <!-- custom javascript -->
    <script src="~/Content/js/script.js" type="text/javascript"></script>

</head>
<body>
    <header class="section-header">
        <section class="header-main border-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-2 col-lg-3 col-md-12">
                        <a href="@Url.Action("Home","Home")" class="brand-wrap">
                            <i class="fas fa-gamepad" style="font-size:30px"> GAMER</i>
                        </a> <!-- brand-wrap.// -->
                    </div>
                    <div class="col-xl-6 col-lg-5 col-md-6">
                        <form action="@Url.Action("Search", "Search")" class="search-header ">
                            <div class="input-group w-100">
                                <input type="text" name="SearchString" class="form-control" placeholder="Tìm kiếm">
                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fa fa-search"></i> Tìm Kiếm
                                    </button>
                                </div>
                            </div>
                        </form> <!-- search-wrap .end// -->
                    </div> <!-- col.// -->
                    <div class="col-xl-4 col-lg-4 col-md-6">
                        <div class="widgets-wrap float-md-right">
                            <div class="widget-header mr-3">
                                <a href="#" class="widget-view">
                                    <div class="icon-area">
                                        <i class="fa fa-user"></i>
                                    </div>
                                    @if (Session["idUser"] != null && Session["Admin"] is true)
                                    {
                                        <a href="~/Admin/Product/ListProduct">Admin |</a>
                                        <a href="@Url.Action("Logout","Home")">Đăng xuất</a>
                                    }
                                    else if (Session["idUser"] != null && (Session["Admin"] is null || Session["Admin"] is false))
                                    {
                                        <a href="@Url.Action("UserProfile","UserProfile")">@Session["FullName"] |</a>
                                        <a href="~/Home/Logout">Đăng xuất</a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Register","Home")">Đăng ký |</a>
                                        <a href="@Url.Action("Login","Home")">Đăng nhập</a>
                                    }
                                    @*@<small class="text"> My profile </small>*@
                                </a>
                            </div>
                            <div class="widget-header mr-3">
                                
                            </div>
                            <div class="widget-header mr-3">
                                
                            </div>
                            <div class="widget-header">
                                <a href="@Url.Action("Cart","Cart")" class="widget-view">
                                    <div class="icon-area">
                                        <i class="fa fa-shopping-cart"></i>
                                        <span class="notify" id="CartCount">@Session["count"]</span>
                                    </div>
                                    <small class="text"> Giỏ hàng </small>
                                </a>
                            </div>
                        </div> <!-- widgets-wrap.// -->
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- container.// -->
        </section> <!-- header-main .// -->
    </header> <!-- section-header.// -->
    @RenderBody()
    <!-- ========================= HEADER END ========================= -->
    <!-- ========================= FOOTER ========================= -->
    <footer class="section-footer bg-secondary">
        <div class="container">
            <section class="footer-top padding-y-lg text-white">
                <div class="row">
                    <aside class="col-md col-6">
                        <h6 class="title">Công ty</h6>
                        <ul class="list-unstyled">
                            <li> <a href="#">về chúng tôi</a></li>
                            <li> <a href="#">Sự nghiệp</a></li>
                            <li> <a href="#">Tìm kiếm cửa hàng</a></li>
                            <li> <a href="#">Quy tắc và điều khoản </a></li>

                        </ul>
                    </aside>
                    <aside class="col-md col-6">
                        <h6 class="title">Giúp đỡ</h6>
                        <ul class="list-unstyled">
                            <li> <a href="#">Liên hệ chúng tôi</a></li>
                            <li> <a href="#">Hoàn tiền</a></li>
                            <li> <a href="#">Tình trạng đặt hàng</a></li>
                            <li> <a href="#">Thông tin vận chuyển</a></li>

                        </ul>
                    </aside>
                    <aside class="col-md col-6">
                        <h6 class="title">Tài Khoản</h6>
                        <ul class="list-unstyled">
                            <li> <a href="@Url.Action("Login","Login")"> Đăng nhập </a></li>
                            <li> <a href="@Url.Action("Register","Login")"> Đăng ký </a></li>
                            <li> <a href="#"> Cài đặt tài khoản </a></li>
                            <li> <a href="#"> Danh sách đặt hàng </a></li>
                        </ul>
                    </aside>
                    <aside class="col-md">
                        <h6 class="title">Mạng Xã hội</h6>
                        <ul class="list-unstyled">
                            <li><a href="#"> <i class="fab fa-facebook"></i> Facebook </a></li>
                            <li><a href="#"> <i class="fab fa-twitter"></i> Twitter </a></li>
                            <li><a href="#"> <i class="fab fa-instagram"></i> Instagram </a></li>
                            <li><a href="#"> <i class="fab fa-youtube"></i> Youtube </a></li>
                        </ul>
                    </aside>
                </div> <!-- row.// -->
            </section>
        </div><!-- //container -->
    </footer>
    <!-- ========================= FOOTER END // ========================= -->
</body>
</html>
