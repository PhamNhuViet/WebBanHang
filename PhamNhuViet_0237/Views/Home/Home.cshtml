                                <li><a href="@Url.Action("ProductCategory", "Category", new {@id=7})"><i class="fas fa-gamepad"></i> Game</a></li>
                                <li><a href="@Url.Action("ProductCategory", "Category", new {@id=8})"><i class="fas fa-torii-gate"></i> Mô Hình</a></li>

                            </ul>
                        </nav>
                    </aside> <!-- col.// -->
                    <div class="col-md-9 col-xl-7 col-lg-7">

                        <!-- ================== COMPONENT SLIDER  BOOTSTRAP  ==================  -->
                        <div id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <a href="@Url.Action("ProductCategory", "Category", new {@id=1})"><img src="~/Content/images/banners/ps5banner.jpg" alt="First slide"></a>
                                </div>
                                <div class="carousel-item">
                                    <a href="@Url.Action("ProductCategory", "Category", new {@id=3})"><img src="~/Content/images/banners/xboxseriesbanner.jpg" alt="Second slide"></a>
                                </div>
                                <div class="carousel-item">
                                    <a href="@Url.Action("ProductCategory", "Category", new {@id=5})"><img src="~/Content/images/banners/nintendoswitchbanner.jpg" alt="Third slide"></a>
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <!-- ==================  COMPONENT SLIDER BOOTSTRAP end.// ==================  .// -->

                    </div> <!-- col.// -->
                    <div class="col-md d-none d-lg-block flex-grow-1">
                        <aside class="special-home-right">
                            <h6 class="bg-blue text-center text-white mb-0 p-2">Danh Mục Phổ biến</h6>

                            @foreach (var item in Model.ListCategories.Where(n => n.isPopular == 1))
                            {
                                <div class="card-banner border-bottom">
                                    <div class="py-3" style="width:80%">
                                        <h6 class="card-title">@item.Name</h6>
                                        <a href="@Url.Action("ProductCategory", "Category", new {@id=item.Id})" class="btn btn-secondary btn-sm"> Mua ngay </a>
                                    </div>
                                    <img src="~/Content/images/items/@item.Avatar" height="80" class="img-bg">
                                </div>
                            }

                        </aside>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->

            </div> <!-- card-body.// -->
        </main> <!-- card.// -->

    </section>
    <!-- ========================= SECTION MAIN END// ========================= -->
    <!-- =============== SECTION DEAL =============== -->
    <section class="padding-bottom">
        <div class="card card-deal">
            <div class=" content-body">
                <header class="section-heading">
                    <h3 class="section-title">Giảm Giá</h3>
                </header><!-- sect-heading -->
                <div class="timer">
                    <img src="~/Content/images/items/Sale5.png" style="width: 200px; height: 170px">
                </div>
            </div> <!-- col.// -->
            <div class="row no-gutters items-wrap">

                @foreach (var item in Model.ListProducts.Where(n => n.TypeId == 1))
                {
                    <div class="col-md col-6">
                        <figure class="card-product-grid card-sm">
                            <a href="@Url.Action("ProductDetail", "Product", new {id=item.Id})" class="img-wrap">
                                <img src="~/Content/images/items/@item.Avatar">
                            </a>
                            <div class="text-wrap p-3">
                                <a href="@Url.Action("ProductDetail", "Product", new {id=item.Id})" class="title">@item.Name</a>
                                @if (item.PriceDiscount != null)
                                {
                                    <span class="h6 price">@string.Format("{0:0,0}", item.PriceDiscount)<sup>đ</sup></span><br />
                                    <small class="text-muted" style="text-decoration-line:line-through">@string.Format("{0:0,0}", item.Price)</small><sup class="text-muted">đ</sup>
                                }
                                else
                                {
                                    <span class="h5 price">@string.Format("{0:0,0}", item.Price)<sup>đ</sup></span>
                                }
                                @*<span class="badge badge-danger"> -20% </span>*@
                            </div>
                        </figure>
                    </div> <!-- col.// -->
                }

            </div>
        </div>

    </section>
    <!-- =============== SECTION DEAL // END =============== -->
