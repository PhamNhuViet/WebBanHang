<div class="container">
    <!-- ========================= SECTION MAIN  ========================= -->
    <section class="section-main padding-y">
        <main class="card">
            <div class="card-body">

                <div class="row">
                    <aside class="col-lg col-md-3 flex-lg-grow-0">
                        <h6><a href="@Url.Action("Category","Category")">Danh Mục</a></h6>
                        <nav class="nav-home-aside">
                            <ul class="menu-category">

                                <li><a href="@Url.Action("ProductCategory", "Category", new {@id=1})"><i class="fab fa-playstation"></i> PlayStation 5</a></li>
                                <li><a href="@Url.Action("ProductCategory", "Category", new {@id=2})"><i class="fab fa-playstation"></i> PlayStation 4</a></li>
                                <li><a href="@Url.Action("ProductCategory", "Category", new {@id=3})"><i class="fab fa-xbox"></i> Xbox Series X | S</a></li>
                                <li><a href="@Url.Action("ProductCategory", "Category", new {@id=4})"><i class="fab fa-xbox"></i> Xbox One</a></li>
